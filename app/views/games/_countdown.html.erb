<%= javascript_include_tag('countdown') %>

<script type => 'text/javascript'>
  $(document).ready(function() {
      $('#countdown').countdown({until: +<%= game.current_period.time_remaining %>, onExpiry: reloadPage, layout: 'The current period ends in {h<}{hnn}:{h>}{mnn}:{snn}'});
  });

  function reloadPage() {
    document.location.reload();
  }
</script>
