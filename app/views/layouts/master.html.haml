!!!
%html{html_attrs}
%head
  %title= "Werewolf - #{@title || 'A Game of Strategy and Deception for Twitter'}"
  = stylesheet_link_tag 'master'
  = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
  = stylesheet_link_tag 'compiled/partials/_base.css'
  = stylesheet_link_tag 'compiled/print.css', :media => 'print'
  /[if lt IE 8]
    = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'

  = javascript_include_tag :defaults
  = yield :extra_head

%body.deception
  #wrapper
    #header
      %h1
        = link_to('Werewolf', '/')

      #user_bar
        - if logged_in?
          = profile_image(current_user, :width => 24, :height => 24)
          = "Logged in as <strong>@#{current_user.login}</strong>."
          = link_to('Log out', '/logout')
        - else
          = link_to('Login via Twitter', '/login')

      .clearfix
    #contents
      - if flash[:error]
        .flash.error= flash[:error]
      - if flash[:notice]
        .flash.notice= flash[:notice]

      = yield
  #footer
    = "Copyright &copy; #{Time.now.year} #{link_to('Nth Metal Interactive', 'http://nthmetal.com')}."
