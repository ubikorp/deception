!!!
%html{html_attrs}
%head
  %meta{'http-equiv' => 'content-type', :content => 'text/html;charset=UTF-8'}
  %title= "Werewolf - #{@title || 'A Game of Strategy and Deception for Twitter'}"
  = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
  = stylesheet_link_tag 'compiled/print.css', :media => 'print'
  /[if lt IE 8]
    = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'

  = javascript_include_tag :defaults
  = yield :extra_head

%body.blueprint
  #container
    #header
      %h1#logo
        = link_to('Werewolf.', '/')

      %ul#status
        - if logged_in?
          %li= link_to(profile_image(current_user, :width => 24, :height => 24, :title => "Logged in as @#{current_user.login}"), '/')
          %li.hidden= "Logged in as @#{current_user.login}"
          %li= link_to('Log out', '/logout')
        - else
          %li= link_to('Login via Twitter', '/login')
        %li= link_to('Instructions', '/')

    #art
      = image_tag('temp.png')
    %h2#headline= "#{@title || 'A Game of Strategy and Deception for Twitter'}"

    #content
      - if flash[:error]
        .flash.error= flash[:error]
      - if flash[:notice]
        .flash.notice= flash[:notice]

      = yield

    #footer
      = "Copyright &copy; #{Time.now.year} #{link_to('Nth Metal Interactive', 'http://nthmetal.com')}."
